{
  "name": "coregpt-teams",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend:watch\"  \"npm run dev:backend\"",
    "dev:backend": "tsx watch src/server/index.ts",
    "dev:frontend:watch": "vite build --watch",
    "dev:frontend": "vite --port 3000",
    "build:backend": "tsc --project tsconfig.server.json",
    "build:frontend": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@microsoft/teams-js": "^2.47.0",
    "@microsoft/teams.api": "^2.0.0",
    "@microsoft/teams.apps": "^2.0.0",
    "@microsoft/teams.cards": "^2.0.0",
    "@microsoft/teams.client": "^2.0.0",
    "@microsoft/teams.common": "^2.0.0",
    "@microsoft/teams.dev": "^2.0.0",
    "@microsoft/teams.graph": "^2.0.0",
    "@microsoft/teams.graph-endpoints": "^2.0.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@sentry/react": "^10.5.0",
    "axios": "^1.11.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "sonner": "^2.0.6",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@sentry/vite-plugin": "^4.1.1",
    "@swc/core": "^1.11.21",
    "@swc/jest": "^0.2.37",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^29.5.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
